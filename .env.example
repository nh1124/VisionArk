# AI TaskManagement OS - Environment Configuration
# Copy this file to .env and fill in the values

# =========================
# Required: API Keys
# =========================
GEMINI_API_KEY=your_gemini_api_key_here

# =========================
# Server Settings
# =========================
BACKEND_PORT=8000
FRONTEND_PORT=3000

# =========================
# Database (PostgreSQL - REQUIRED)
# =========================
# For Docker: leave empty (docker-compose sets it automatically)
# For local PostgreSQL:
DATABASE_URL=postgresql://atmos:atmos_secret@localhost:5432/atmos

# Docker PostgreSQL settings
POSTGRES_USER=atmos
POSTGRES_PASSWORD=atmos_secret
POSTGRES_DB=atmos

# =========================
# Authentication
# =========================
ATMOS_ENV=dev                    # dev | prod
ATMOS_REQUIRE_API_KEY=false      # Set to true in production
ATMOS_API_KEY_PEPPER=dev_pepper_change_in_prod   # CHANGE THIS IN PRODUCTION!

# =========================
# Optional: OpenAI (alternative LLM)
# =========================
# OPENAI_API_KEY=your_openai_key_here
